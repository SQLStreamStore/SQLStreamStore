<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>Postgre SQL provider for SQL StreamStore</Description>
    <AssemblyTitle>Stream Store - Postgres</AssemblyTitle>
    <VersionPrefix>0.6.1</VersionPrefix>
    <TargetFrameworks>netstandard1.3;net46</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>SqlStreamStore.Postgres</AssemblyName>
    <PackageId>SqlStreamStore.Postgres</PackageId>
    <PackageTags>cqrs;event-sourcing;domain-driven-design;event-store;postgre</PackageTags>
    <PackageProjectUrl>https://github.com/damianh/SqlStreamStore</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/damianh/SqlStreamStore/blob/master/LICENSE</PackageLicenseUrl>
    <PackageTags>cqrs;event-sourcing;domain-driven-design;event-store</PackageTags>
    <NetStandardImplicitPackageVersion Condition=" '$(TargetFramework)' == 'netstandard1.3' ">1.6.1</NetStandardImplicitPackageVersion>
    <GenerateAssemblyTitleAttribute>false</GenerateAssemblyTitleAttribute>
    <GenerateAssemblyDescriptionAttribute>false</GenerateAssemblyDescriptionAttribute>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Npgsql" Version="3.1.9" />
  </ItemGroup>
  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard1.3' ">
    <PackageReference Include="Ensure.That" Version="5.0.0" />
  </ItemGroup>
  <PropertyGroup Condition=" '$(TargetFramework)' == 'netstandard1.3' ">
    <DebugType>portable</DebugType>
  </PropertyGroup>
  <ItemGroup Condition=" '$(TargetFramework)' == 'net46' ">
    <PackageReference Include="Ensure.That" Version="5.0.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\SqlStreamStore\SqlStreamStore.csproj" />
  </ItemGroup>
  <PropertyGroup Condition=" '$(TargetFramework)' == 'net46' ">
    <DebugType>full</DebugType>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|netstandard1.3|AnyCPU'">
    <DocumentationFile>bin\Debug\netstandard1.3\SqlStreamStore.Postgres.xml</DocumentationFile>
  </PropertyGroup>
</Project>